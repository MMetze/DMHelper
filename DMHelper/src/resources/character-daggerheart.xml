<?xml version="1.0" encoding="UTF-8"?>
<dmh:template xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="character.xsd">
    <dmh:attribute type="dmh:string" name="_baseID"/>
    <dmh:attribute type="dmh:integer" name="type"/>
    <dmh:attribute type="dmh:string" name="name"/>
    <dmh:attribute type="dmh:boolean" name="active" default="1"/>
    <dmh:attribute type="dmh:boolean" name="expanded"/>
    <dmh:attribute type="dmh:integer" name="row"/>
    <dmh:attribute type="dmh:string" name="dndBeyondID" default="-1"/>
    <dmh:attribute type="dmh:string" name="icon"/>
    <dmh:attribute type="dmh:string" name="size" default="medium"/>

    <dmh:attribute type="dmh:string" name="class"/>
    <dmh:attribute type="dmh:string" name="domains"/>
    <dmh:attribute type="dmh:string" name="pronouns"/>
    <dmh:attribute type="dmh:string" name="heritage"/>
    <dmh:attribute type="dmh:string" name="subclass"/>
    <dmh:attribute type="dmh:integer" name="level"/>
    <dmh:attribute type="dmh:integer" name="evasion"/>
    <dmh:attribute type="dmh:resource" name="armor"/>
    <dmh:attribute type="dmh:integer" name="armor_used"/>

    <dmh:attribute type="dmh:integer" name="agility" default="0"/>
    <dmh:attribute type="dmh:integer" name="strength" default="0"/>
    <dmh:attribute type="dmh:integer" name="finesse" default="0"/>
    <dmh:attribute type="dmh:integer" name="instinct" default="0"/>
    <dmh:attribute type="dmh:integer" name="presence" default="0"/>
    <dmh:attribute type="dmh:integer" name="knowledge" default="0"/>

    <dmh:attribute type="dmh:integer" name="minor_damage_threshold" default="0"/>
    <dmh:attribute type="dmh:integer" name="major_damage_threshold" default="0"/>
    <dmh:attribute type="dmh:resource" name="hit_points"/>
    <dmh:attribute type="dmh:resource" name="stress"/>
    <dmh:attribute type="dmh:resource" name="hope" default="0/6"/>

    <dmh:element type="dmh:list" name="experience">
        <dmh:attribute type="dmh:string" name="description"/>
        <dmh:attribute type="dmh:integer" name="bonus"/>
    </dmh:element>

    <dmh:attribute type="dmh:resource" name="gold_handfuls" default="0/9"/>
    <dmh:attribute type="dmh:resource" name="gold_handfuls" default="0/9"/>
    <dmh:attribute type="dmh:resource" name="gold_chest" default="0/1"/>

    <dmh:element type="dmh:list" name="class_feature">
        <dmh:attribute type="dmh:string" name="name"/>
        <dmh:attribute type="dmh:string" name="description"/>
    </dmh:element>

    <dmh:attribute type="dmh:integer" name="proficiency" default="1"/>
    <dmh:attribute type="dmh:string" name="primary_weapon_name"/>
    <dmh:attribute type="dmh:string" name="primary_weapon_trait"/>
    <dmh:attribute type="dmh:string" name="primary_weapon_damage"/>
    <dmh:attribute type="dmh:string" name="primary_weapon_feature"/>
    <dmh:attribute type="dmh:string" name="secondary_weapon_name"/>
    <dmh:attribute type="dmh:string" name="secondary_weapon_trait"/>
    <dmh:attribute type="dmh:string" name="secondary_weapon_damage"/>
    <dmh:attribute type="dmh:string" name="secondary_weapon_feature"/>
    <dmh:attribute type="dmh:string" name="armor_name"/>
    <dmh:attribute type="dmh:string" name="armor_thresholds"/>
    <dmh:attribute type="dmh:string" name="armor_base"/>
    <dmh:attribute type="dmh:string" name="armor_feature"/>

    <dmh:element type="dmh:html" name="inventory"/>
    <dmh:element type="dmh:html" name="notes"/>
</dmh:template>
